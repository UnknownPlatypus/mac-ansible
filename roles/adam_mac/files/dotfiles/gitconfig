[user]
    name = Adam Johnson
    email = me@adamj.eu

[core]
    excludesfile = ~/.gitignore_global
    pager = delta

[credential]
    helper = cache --timeout=3600

[interactive]
    singlekey = true
    diffFilter = delta --color-only

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[push]
    followTags = true
    autoSetupRemote = true

[merge]
    conflictstyle = zdiff3
    autoStash = true

[alias]
    d = diff
    s = status
    st = stash
    co = checkout
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ign = ls-files -o -i --exclude-standard
    edit-staged = "!f() { git diff --name-status --staged | cut -f2 ; }; /Applications/Sublime\\ Text.app/Contents/SharedSupport/bin/subl `f`"
    edit-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; /Applications/Sublime\\ Text.app/Contents/SharedSupport/bin/subl `f`"
    add-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; git add `f`"
    forkdiff = !bash -c 'git diff $(git merge-base "$1" "$2") "$2" "${@: 3}" ' -
    new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
    ffmerge = merge --ff-only
    alias-master-as-main = !git symbolic-ref refs/heads/main refs/heads/master && git symbolic-ref refs/remotes/origin/main refs/remotes/origin/master && git switch main
    rm-merged = !git branch --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" { print $1 }' | xargs -r git branch -D
    sync = !git switch main && git pull --prune && git rm-merged

[pull]
    rebase = false

[init]
    defaultBranch = main

[feature]
    manyFiles = 1

[diff]
    algorithm = histogram

[delta]
    hyperlinks = true
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    navigate = true
    features = line-numbers decorations
    whitespace-error-style = 22 reverse

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none

[help]
    autocorrect = immediate

[rebase]
    autoStash = true
    rescheduleFailedExec = true
    updateRefs = true

[commit]
    verbose = true
